@model List<Team>
<h1>Table of teams</h1>
<div>
    <a asp-action="AddNew" class="btn btn-dark">Add New Team</a>
</div>
<br>
<div>
    <table class="table table-dark">

        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th> Country</th>
                <th>Details</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var x in Model)
            {
                <tr>
                    <th>@x.id</th>
                    <td>@x.teamname</td>
                    <td>@x.coach</td>
                    <td>
                        <a asp-route-id="@x.id" asp-action="MoreTeam" class="btn btn-outline-warning">more</a>
                        <a asp-route-id="@x.id" asp-action="EditTeam" class="btn btn-outline-warning">edit</a>
                        <a asp-route-id="@x.id" asp-action="Delete" class="btn btn-outline-danger">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>